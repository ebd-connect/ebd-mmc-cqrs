# Run the container with `docker run -p 3000:3000 -t mmc-gateway`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system mmc-gateway && \
          adduser --system -G mmc-gateway mmc-gateway

COPY dist/apps/mmc-gateway mmc-gateway
RUN chown -R mmc-gateway:mmc-gateway .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix mmc-gateway --omit=dev -f install

CMD [ "node", "mmc-gateway" ]
